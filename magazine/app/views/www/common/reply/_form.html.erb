<div class="col-xs-12" >

<%= form_for Comment.new do |f| %>
	<h3>Lascia un commento</h3>

	<h5>Il tuo indirizzo non sar√† pubblicato. I campi contrassegnati con  <span class="pp_required">*</span> sono obbligatori</h5>

	<div class="row">
		<div class="col-xs-12">
			<h4>Commento <span class="pp_required">*</span></h4>
			<%= f.text_area :body, style: "width:100%;height:300px;" %>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-4">
			<h5>Nome <span class="pp_required">*</span></h5>
			<%= f.text_field :name, style: "width:100%;" %>
		</div>

		<div class="col-lg-4">
			<h5>Email <span class="pp_required">*</span></h5>
			<%= f.text_field :email, style: "width:100%;" %>
		</div>

		<div class="col-lg-4">
			<h5>Sito Web</h5>
			<%= f.text_field :url_site, style: "width:100%;" %>
		</div>
	</div>

	<br/>
	<div class="row">
		<div class="col-xs-12">
			<%= f.submit "Invia Commento", class: "pp_button" %>
		</div>
	</div>

<% end %>

</div>
